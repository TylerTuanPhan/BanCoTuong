@{
    ViewBag.Title = "Cờ Tướng Online";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            min-height: 100vh; /* Chiều cao tối thiểu bằng 100% viewport */
            color: #fff;
        }

        header {
            width: 100vw; /* Chiều rộng 100% viewport */
            height: 84px; /* Chiều cao header */
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0 20px; /* Padding ngang */
            background: rgba(0, 0, 0, 0.8);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
            z-index: 1; /* Đặt z-index cao để hiển thị trên hình nền */
        }

        .logo {
            font-size: 1.5em;
            font-weight: bold;
            color: #ffcc00;
            margin-right: auto; /* Đẩy logo sang bên trái */
        }

        nav {
            display: flex;
            gap: 15px; /* Giảm khoảng cách giữa các phần tử trong nav */
        }

        .login-settings {
            display: flex;
            align-items: center;
            gap: 5px; /* Giảm khoảng cách giữa các nút */
        }

        nav a {
            color: #fff;
            text-decoration: none;
            padding: 5px 15px; /* Giảm padding cho liên kết */
            border-radius: 5px;
            background: rgba(255, 255, 255, 0.2);
            transition: background 0.3s, transform 0.3s;
        }

            nav a:hover {
                background: rgba(255, 255, 255, 0.5);
                transform: scale(1.05);
            }

        .gear-icon {
            width: 20px;
            height: 20px;
        }

        .container {
            flex-grow: 1; /* Giúp phần tử này chiếm không gian còn lại */
            display: flex;
            flex-direction: column;
            align-items: center; /* Căn giữa nội dung trong container */
            justify-content: center; /* Căn giữa theo chiều dọc */
            text-align: center; /* Căn giữa văn bản */
            padding: 20px; /* Giảm padding cho container */
            height: calc(100vh - 168px); /* Chiều cao toàn màn hình trừ chiều cao header và footer */
        }

        .button-container {
            margin-top: 10px; /* Giảm khoảng cách giữa phần chào mừng và các nút */
        }

        .play-button {
            display: inline-block;
            padding: 10px 25px; /* Giảm padding cho nút */
            margin: 5px; /* Giảm khoảng cách giữa các nút */
            font-size: 1.1em; /* Giảm kích thước chữ cho nút */
            border-radius: 5px;
            background: rgba(255, 255, 255, 0.3);
            color: #fff;
            transition: background 0.3s, transform 0.3s;
        }

            .play-button:hover {
                background: rgba(255, 255, 255, 0.5);
                transform: scale(1.05);
            }

        .background-image {
            position: absolute; /* Để hình nền nằm dưới mọi thành phần khác */
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover; /* Đảm bảo hình ảnh không bị méo */
            z-index: -1; /* Đặt hình ảnh ở dưới cùng */
        }

        footer {
            width: 100vw; /* Chiều rộng 100% viewport */
            height: 84px; /* Chiều cao footer giống như header */
            display: flex; /* Sử dụng flexbox để sắp xếp nội dung của footer */
            justify-content: center; /* Căn giữa nội dung trong footer */
            align-items: center; /* Căn giữa theo chiều dọc */
            background: rgba(0, 0, 0, 0.8);
            box-shadow: 0 -4px 10px rgba(0, 0, 0, 0.5);
            position: relative; /* Đảm bảo footer nằm ở cuối */
            margin-top: auto; /* Đẩy footer xuống cuối cùng */
            padding: 0 20px; /* Thêm padding ngang cho footer */
        }

            footer p {
                margin: 0; /* Xóa khoảng cách giữa các đoạn văn trong footer */
            }

            footer a {
                color: #ffcc00; /* Màu sắc cho liên kết trong footer */
            }
    </style>
</head>
<body>

    <!-- Hình ảnh nền -->
    <img src="/images/homepage-image.jpg" alt="Hình ảnh trang chủ" class="background-image">

    <header>
        <div class="logo">Cờ Tướng Online</div>
        <nav>
            <div class="login-settings">
                <a href="#">Đăng Nhập</a>
                <a href="#">
                    <img src="/images/gear-icon.jpg" alt="Cài Đặt" class="gear-icon">
                </a>
            </div>
        </nav>
    </header>

    <div class="container">

        <div class="button-container">
            <a href="#" class="play-button">Chơi Ngay</a>
            <a href="#" class="play-button">Phòng Chơi</a>
        </div>
    </div>

    <footer>
        <p>Liên hệ: <a href="mailto:support@cotuongonline.com">support@cotuongonline.com</a></p>
        <p>© 2024 Cờ Tướng Online</p>
    </footer>
</body>
</html>
